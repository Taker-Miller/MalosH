<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4a148c">

    <!-- Contenedor para centrar todos los elementos -->
    <LinearLayout
        android:id="@+id/linearLayoutCenterMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Registrar Malos Hábitos -->
        <Button
            android:id="@+id/buttonRegistrarHabitos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#8E24AA"
            android:text="Registrar Malos Hábitos"
            android:textColor="#FFFFFF" />

        <!-- Botón Metas -->
        <Button
            android:id="@+id/buttonMetas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#8E24AA"
            android:text="Metas"
            android:textColor="#FFFFFF" />

        <!-- Botón Desafíos Diarios -->
        <Button
            android:id="@+id/buttonDesafiosDiarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#8E24AA"
            android:text="Desafíos Diarios"
            android:textColor="#FFFFFF" />

        <!-- Botón Progreso -->
        <Button
            android:id="@+id/buttonProgreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#8E24AA"
            android:text="Progreso"
            android:textColor="#FFFFFF" />

        <!-- Botón Reflexiones Diarias -->
        <Button
            android:id="@+id/buttonReflexionesDiarias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#8E24AA"
            android:text="Reflexiones Diarias"
            android:textColor="#FFFFFF" />

        <!-- Botón Tus Malos Hábitos -->
        <Button
            android:id="@+id/buttonTusMalosHabitos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#8E24AA"
            android:text="Tus Malos Hábitos"
            android:textColor="#FFFFFF" />

        <!-- Botón Cerrar Sesión -->
        <Button
            android:id="@+id/buttonCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#FF0000"
            android:text="Cerrar Sesión"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
